//There are approximately 3.156 Ã— 107 seconds in a year. Write a program that requests your age in years
//and then displays the equivalent number of seconds.

#include <stdio.h>

int main (void)
{
	float seconds = 3.156e7;
	int years;

	printf("Enter your age in years: ");
	scanf("%d", &years);
	printf("%d years is %.2f in seconds.\n", years, seconds * years);

	return 0;
}
