#include <stdio.h>
#include <string.h>

int main (void)
{
	char first[20];
	char last[20];

	printf("Enter your first name: ");
	scanf("%s", first);
	printf("Enter your last name: ");
	scanf("%s", last);

	printf("%s %s\n", first, last);
	printf("%*d %*d\n", strlen(first), strlen(last), strlen(first), strlen(last));
	printf("%s %s\n", first, last);
	printf("%-*d %-*d\n", strlen(first), strlen(last), strlen(first), strlen(last));

	return 0;
}
